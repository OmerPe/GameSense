@model GameSense.Models.GameSearchModel


@{
    ViewData["Title"] = "Game List";
}

<h1>Game List DB</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

    <form class="form-inline my-2 my-lg-0" asp-controller="Games" asp-action="Index" method="get">
        <p>
            Name: <input class="form-control mr-sm-2" type="text" asp-for="SearchString" />

            <select class="form-control mr-sm-2" asp-for="Genre" asp-items="Model.Genres">
                <option value="">All</option>
            </select>
            <select class="form-control mr-sm-2" asp-for="Developer" asp-items="Model.Developers">
                <option value="">All</option>
            </select>
            <input class="btn btn-primary my-2 my-sm-0" type="submit" value="Search" />
        </p>
    </form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].ageRestriction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].Developer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Games)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ageRestriction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Developer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
